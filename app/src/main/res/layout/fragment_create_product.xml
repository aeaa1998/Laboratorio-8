<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".createProduct">


    <TextView
            android:text="Ingrese Nombre del Producto"
            android:layout_width="226dp"
            android:layout_height="33dp"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="62dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="102dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="83dp"/>
    <EditText
            android:layout_width="226dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/product_name" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="83dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="115dp"/>
    <TextView
            android:text="Ingrese el codigo"
            android:layout_width="226dp"
            android:layout_height="32dp"
            android:id="@+id/textView4" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/product_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="83dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="102dp"/>
    <EditText
            android:layout_width="225dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/product_code" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="79dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="107dp"/>
    <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_button" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/product_code" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>