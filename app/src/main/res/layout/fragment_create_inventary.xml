<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".create_inventary"
>


    <TextView
            android:text="Ingrese el nombre del inventario"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/Nombre_Inventario" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="76dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="119dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/Nombre_Inventario" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="91dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="107dp"/>
    <Button
            android:text="@string/menu_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_send" android:layout_marginTop="47dp"
            app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>